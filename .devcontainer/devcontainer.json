// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
    "name": "NestJS (via Docker Compose)", 
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/usr/src/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "Prisma.prisma" // Suporte ao esquema Prisma
            ]
        }
    },

    // ðŸ’¡ PASSO CRUCIAL PARA NESTJS: Instala o CLI globalmente e as dependÃªncias do projeto.
    "postCreateCommand": "npm install -g @nestjs/cli && npm install && npx prisma generate",

    // ðŸ’¡ PASSO RECOMENDADO: Abre a porta padrÃ£o do NestJS (3000)
    "forwardPorts": [3000]

    // ... (o resto das linhas pode ser deixado como estÃ¡, ou deletado)
}